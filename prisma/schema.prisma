// Prisma schema for Hostel Management System
// Database: PostgreSQL on Railway

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// LOCATION & ROOM MODELS
// ============================================

model Location {
  id    String @id @default(cuid())
  name  String
  rooms Room[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id               String            @id @default(cuid())
  roomNumber       String            @unique
  floor            Int
  capacity         Int
  type             RoomType
  baseMonthlyRent  Float             @default(500)
  locationId       String
  location         Location          @relation(fields: [locationId], references: [id])
  beds             Bed[]
  maintenanceTasks MaintenanceTask[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum RoomType {
  AC
  NON_AC
}

model Bed {
  id         String   @id @default(cuid())
  roomId     String
  label      String // e.g., "A", "B", "C"
  isOccupied Boolean  @default(false)
  room       Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  student    Student?

  @@unique([roomId, label])
}

// ============================================
// STUDENT MODEL
// ============================================

model Student {
  id                       String        @id @default(cuid())
  name                     String
  phone                    String
  email                    String?
  bedId                    String?       @unique
  roomId                   String?
  checkInDate              DateTime
  status                   StudentStatus @default(ACTIVE)
  emergencyContactName     String?
  emergencyContactPhone    String?
  emergencyContactRelation String?
  address                  String?
  securityDeposit          Float?
  securityDepositStatus    DepositStatus @default(PENDING)
  monthlyRent              Float?
  adminNotes               String?
  idProofUrl               String?
  bed                      Bed?          @relation(fields: [bedId], references: [id])
  transactions             Transaction[]
  activityLogs             ActivityLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum StudentStatus {
  ACTIVE
  ARCHIVED
}

enum DepositStatus {
  PAID
  PENDING
  REFUNDED
}

// ============================================
// FINANCIAL MODELS
// ============================================

model Transaction {
  id          String          @id @default(cuid())
  studentId   String
  amount      Float
  type        TransactionType
  status      PaymentStatus   @default(UNPAID)
  date        DateTime
  dueDate     DateTime? // Optional due date for overdue tracking
  month       String // e.g., "January 2026" for filtering
  description String?
  student     Student         @relation(fields: [studentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum TransactionType {
  RENT
  DEPOSIT
  FINE
  PENALTY
  DAMAGE
}

enum PaymentStatus {
  PAID
  UNPAID
}

model Expense {
  id          String          @id @default(cuid())
  date        DateTime
  month       String
  category    ExpenseCategory
  amount      Float
  description String
  vendorName  String?
  receiptUrl  String?

  createdAt DateTime @default(now())
}

enum ExpenseCategory {
  UTILITY
  MAINTENANCE
  SALARY
  SUPPLIES
  STAFF
  OTHER
}

// ============================================
// ACTIVITY & MAINTENANCE MODELS
// ============================================

model ActivityLog {
  id          String          @id @default(cuid())
  studentId   String
  type        ActivityType
  description String
  date        DateTime
  status      ActivityStatus?
  student     Student         @relation(fields: [studentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum ActivityType {
  GATE_PASS
  VISITOR
  COMPLAINT
  NOTICE
}

enum ActivityStatus {
  APPROVED
  PENDING
  REJECTED
}

model MaintenanceTask {
  id            String              @id @default(cuid())
  roomId        String
  title         String
  description   String
  category      MaintenanceCategory
  priority      Priority
  status        MaintenanceStatus   @default(REPORTED)
  dateReported  DateTime
  dateCompleted DateTime?
  cost          Float?
  room          Room                @relation(fields: [roomId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MaintenanceCategory {
  PLUMBING
  ELECTRICAL
  FURNITURE
  INTERNET
  OTHER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum MaintenanceStatus {
  REPORTED
  IN_PROGRESS
  AWAITING_PARTS
  COMPLETED
}
