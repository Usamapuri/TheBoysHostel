// Prisma schema for Hostel Management System
// Database: PostgreSQL on Railway

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// TENANT MODEL (Multi-tenant SaaS)
// ============================================

model Tenant {
  id        String   @id @default(cuid())
  name      String
  subdomain String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relations
  users            User[]
  locations        Location[]
  rooms            Room[]
  students         Student[]
  transactions     Transaction[]
  expenses         Expense[]
  activityLogs     ActivityLog[]
  maintenanceTasks MaintenanceTask[]
}

// ============================================
// USER & AUTHENTICATION MODELS
// ============================================

enum UserRole {
  SUPERADMIN
  ADMIN
  STAFF
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String    // Hashed with bcrypt
  role          UserRole  @default(STAFF)
  tenantId      String?   // Nullable for Superadmins
  tenant        Tenant?   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth fields
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// LOCATION & ROOM MODELS
// ============================================

model Location {
  id       String @id @default(cuid())
  name     String
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  rooms    Room[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id               String            @id @default(cuid())
  roomNumber       String
  floor            Int
  capacity         Int
  type             RoomType
  baseMonthlyRent  Float             @default(500)
  tenantId         String
  tenant           Tenant            @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  locationId       String
  location         Location          @relation(fields: [locationId], references: [id])
  beds             Bed[]
  maintenanceTasks MaintenanceTask[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roomNumber, tenantId])
}

enum RoomType {
  AC
  NON_AC
}

model Bed {
  id         String   @id @default(cuid())
  roomId     String
  label      String // e.g., "A", "B", "C"
  isOccupied Boolean  @default(false)
  room       Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  student    Student?

  @@unique([roomId, label])
}

// ============================================
// STUDENT MODEL
// ============================================

model Student {
  id                       String        @id @default(cuid())
  name                     String
  phone                    String
  email                    String?
  bedId                    String?       @unique
  roomId                   String?
  checkInDate              DateTime
  status                   StudentStatus @default(ACTIVE)
  emergencyContactName     String?
  emergencyContactPhone    String?
  emergencyContactRelation String?
  address                  String?
  securityDeposit          Float?
  securityDepositStatus    DepositStatus @default(PENDING)
  monthlyRent              Float?
  adminNotes               String?
  idProofUrl               String?
  tenantId                 String
  tenant                   Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  bed                      Bed?          @relation(fields: [bedId], references: [id])
  transactions             Transaction[]
  activityLogs             ActivityLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum StudentStatus {
  ACTIVE
  ARCHIVED
}

enum DepositStatus {
  PAID
  PENDING
  REFUNDED
}

// ============================================
// FINANCIAL MODELS
// ============================================

model Transaction {
  id          String          @id @default(cuid())
  studentId   String
  amount      Float
  type        TransactionType
  status      PaymentStatus   @default(UNPAID)
  date        DateTime
  dueDate     DateTime? // Optional due date for overdue tracking
  month       String // e.g., "January 2026" for filtering
  description String?
  tenantId    String
  tenant      Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  student     Student         @relation(fields: [studentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum TransactionType {
  RENT
  DEPOSIT
  FINE
  PENALTY
  DAMAGE
}

enum PaymentStatus {
  PAID
  UNPAID
}

model Expense {
  id          String          @id @default(cuid())
  date        DateTime
  month       String
  category    ExpenseCategory
  amount      Float
  description String
  vendorName  String?
  receiptUrl  String?
  tenantId    String
  tenant      Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum ExpenseCategory {
  UTILITY
  MAINTENANCE
  SALARY
  SUPPLIES
  STAFF
  OTHER
}

// ============================================
// ACTIVITY & MAINTENANCE MODELS
// ============================================

model ActivityLog {
  id          String          @id @default(cuid())
  studentId   String
  type        ActivityType
  description String
  date        DateTime
  status      ActivityStatus?
  tenantId    String
  tenant      Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  student     Student         @relation(fields: [studentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum ActivityType {
  GATE_PASS
  VISITOR
  COMPLAINT
  NOTICE
}

enum ActivityStatus {
  APPROVED
  PENDING
  REJECTED
}

model MaintenanceTask {
  id            String              @id @default(cuid())
  roomId        String
  title         String
  description   String
  category      MaintenanceCategory
  priority      Priority
  status        MaintenanceStatus   @default(REPORTED)
  dateReported  DateTime
  dateCompleted DateTime?
  cost          Float?
  tenantId      String
  tenant        Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  room          Room                @relation(fields: [roomId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MaintenanceCategory {
  PLUMBING
  ELECTRICAL
  FURNITURE
  INTERNET
  OTHER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum MaintenanceStatus {
  REPORTED
  IN_PROGRESS
  AWAITING_PARTS
  COMPLETED
}
